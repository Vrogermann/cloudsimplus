<?xml version="1.0" encoding="UTF-8"?>
<!-- Logback configuration file. For details check http://logback.qos.ch -->
<configuration scan="true">
    <property scope="context" name="logPath" value="cloudsim-plus-examples/src/main/resources/workload/ufpel/results/${simulation_folder}/" />
    <property scope="context" name="logFileName" value="simulation_logs.log" />

    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%highlight(%-5level %msg%n)</pattern>
        </encoder>
    </appender>
    <appender name="FILE" class="ch.qos.logback.core.FileAppender">
        <file>${logPath}/${logFileName}</file>
        <append>true</append>
        <encoder>
            <pattern>%-5level %msg%n</pattern>
        </encoder>
    </appender>

    <root level="debug">
        <appender-ref ref="STDOUT" />
<!--        <appender-ref ref="FILE" />-->
    </root>
    <contextListener class="ch.qos.logback.classic.jul.LevelChangePropagator"/>
</configuration>
